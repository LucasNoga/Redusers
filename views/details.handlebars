<h1>{{user.first_name}} {{user.last_name}} [{{user.id}}]</h1>
<ul class="list-group">
    <li class="list-group-item"> <strong>Email: </strong>{{user.email}}
    </li>
    <li class="list-group-item"> <strong>Phone: </strong>{{user.phone}}
    </li>
</ul>
<a class="btn btn-default pull-left" href="/">

    <form method="POST" action="/user/delete/{{user.id}}?_method=DELETE">
      <button class="btn btn-danger pull-right" type="submit">Delete</button>
    </form>
